# ========================================
# Configurações do Banco de Dados
# ========================================

# URL completa de conexão com PostgreSQL
# Formato: postgresql://usuario:senha@host:porta/database
DATABASE_URL=postgresql://intuitive:intuitive@db:5432/intuitivecare

# Nota: Use 'db' como host quando rodar via docker-compose
#       Use 'localhost' quando rodar a API localmente (fora do Docker)
# DATABASE_URL=postgresql://intuitive:intuitive@localhost:5434/intuitivecare


# ========================================
# Configurações da API
# ========================================

# Porta em que a API vai rodar (padrão: 8000)
API_PORT=8000

# Ambiente de execução (development, staging, production)
ENV=development

# Habilitar modo debug (true/false)
DEBUG=true


# ========================================
# Configurações do PostgreSQL (Docker)
# ========================================

# Usuário do banco
POSTGRES_USER=intuitive

# Senha do banco
POSTGRES_PASSWORD=intuitive

# Nome do database
POSTGRES_DB=intuitivecare


# ========================================
# Configurações de Cache
# ========================================

# TTL do cache de estatísticas (em segundos, padrão: 300 = 5 minutos)
STATS_CACHE_TTL=300


# ========================================
# Configurações ANS (Pipeline ETL)
# ========================================

# URL base para download de demonstrações contábeis
ANS_DEMONSTRACOES_URL=https://dadosabertos.ans.gov.br/FTP/PDA/demonstracoes_contabeis/

# URL base para download de cadastro de operadoras
ANS_CADASTRO_URL=https://dadosabertos.ans.gov.br/FTP/PDA/operadoras_de_plano_de_saude_ativas/

# Timeout para downloads (em segundos)
HTTP_TIMEOUT=60


# ========================================
# Configurações de Logging
# ========================================

# Nível de log (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Formato do log (json, text)
LOG_FORMAT=text
